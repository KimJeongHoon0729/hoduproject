<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="admin">
	
	<select id="userView" resultType="com.woori.domain.UserVO">
		select * from userjoin
	</select>
	
	<delete id="userDelete">
		delete from userjoin where userId=#{userId}
	</delete>
	
	
<!-- 검색 조건문 -->
    <sql id="criteria">
        <trim prefix="where (" suffix=")" prefixOverrides="OR">
            <foreach collection="typeArr" item="type">
                <trim prefix="OR">
                    <choose>
                        <when test="type == 'I'.toString()">
                            userId like concat('%',#{keyword},'%') 
                        </when>
                        <when test="type == 'N'.toString()">
                            userName like concat('%',#{keyword},'%') 
                        </when>
                    </choose>
                </trim>
            </foreach>
        </trim>
    
    </sql>	
    
    <!-- 회원관리 리스트 출력 -->
	<select id="userList" resultType="com.woori.domain.UserVO" parameterType="com.woori.domain.UserCriteria">
		select * from userJoin 
			<if test="keyword != null">
                 <include refid="criteria"></include>
            </if>
		order by userId DESC    limit #{skip},#{amount} 
	</select>
	
	<!-- 게시물 개수 -->
	<select id="getTotal" resultType="int">
		select count(*) from userJoin  
		<if test="keyword != null">
            <include refid="criteria"></include>
        </if>   
	</select>
	
</mapper>